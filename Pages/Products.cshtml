@page "/products/"
@model ProductsModel
@inject IStringLocalizer<ProductsModel> Localizer
@{
    var products = ViewData["ReturnedProducts"] as List<Product>;
}

<!-- inner banner -->
<section class="bg-white inner-banner pages">

    <div class="container pad-container">
        <div class="col-md-12">
            <h1 class="text-center shoptitle">@Localizer["title"]</h1>
            <h3 class="text-center shoptext">@Localizer["subtitle"]</h3>
        </div>
    </div>

</section>
<!-- / inner banner -->
<br />

<!-- Product section -->
<section>
    <div class="container pad-container">

        <div class="col-sm-12 content">

            <div class="product-grid col3">

                <div class="filter text-left">
                    <a href="#" class="filter active" data-filter="*">@Localizer["all"]</a>
                    <a href="#" class="filter" data-filter=".marmar">@Localizer["marbel"]</a>
                    <a href="#" class="filter" data-filter=".seramik">@Localizer["seramik"]</a>
                    <a href="#" class="filter" data-filter=".granit">@Localizer["granit"]</a>
                </div>
                @if (products != null)
                    {@foreach (var product in products)
                    {
                        <div class="post brd0 @product.Type.ToString().ToLower()">
                            <figure>
                                <a href="/product/@product.Id">
                                    <img id="pImage" src="@("http://localhost:5000/" + product.ImageUrl)"
                                         alt="@product.Name" width="350" height="400" />
                                </a>
                            </figure>
                            <div class="post-content">
                                <h3><a href="/product/@product.Id">@product.Name</a></h3>
                                <h4 style="float: right;">@(product.Measurement.Width + " x " + product.Measurement.Height + " sm")</h4>
                                <div class="price">
                                    <span>&#8380;@((decimal)product.Price / 100)</span>
                                </div>
                            </div>
                        </div>
                    }}

            </div>

            <div class="clearfix"></div>
            <div class="sep30"></div>
        </div>
    </div>
</section>
<!--/ product section -->