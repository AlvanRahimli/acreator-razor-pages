@page "/admin/products"
@model acreator_front.Pages.OrdersModel
@{
    ViewData["admin_products"] = "active";
    Layout = "_AdminLayout";
    var products = ViewData["products"] as List<Product>;
}
<div class="container text-center" style="margin-top: 30px; margin-bottom: 30px"3>
    <h1>Məhsulların siyahısı</h1>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Növü</th>
            <th scope="col">Qiyməti</th>
            <th scope="col">Ölçüləri</th>
            <th scope="col">Rəngi</th>
            <th scope="col">Ətraflı</th>
        </tr>
    </thead>
    <tbody>
        @{
            int no = 1;
            if (products != null)
            foreach (var p in products)
            {
                <tr>
                    <th scope="row">@no</th>
                    <td>@p.Name</td>
                    <td>@p.Type.ToString()</td>
                    <td>&#8380;@((decimal)p.Price / 100)</td>
                    <td>@p.Measurement.Width x @p.Measurement.Height</td>
                    <td>@p.Color</td>
                    <td>@p.Desc</td>
                </tr>
                no++;
            }
        }
    </tbody>
</table>